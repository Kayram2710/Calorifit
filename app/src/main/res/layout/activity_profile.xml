<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#9cf6f6">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Profile Image -->
        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:src="@drawable/profile"
            android:contentDescription="Profile Image"
            android:layout_marginBottom="16dp"
            android:scaleType="centerCrop" />

        <!-- Name -->
        <TextView
            android:id="@+id/name_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textSize="18sp"
            android:textColor="#000000"
            android:fontFamily="@font/josefin_sans"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/name_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/josefin_sans"
            android:text="John Doe"
            android:textSize="16sp"
            android:background="#EEEEEE"
            android:padding="8dp"
            android:layout_marginBottom="16dp" />

        <!-- Age -->
        <TextView
            android:id="@+id/age_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Age"
            android:textSize="18sp"
            android:fontFamily="@font/josefin_sans"
            android:textColor="#000000"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/age_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="25"
            android:fontFamily="@font/josefin_sans"
            android:textSize="16sp"
            android:background="#EEEEEE"
            android:padding="8dp"
            android:layout_marginBottom="16dp" />

        <!-- Weight -->
        <TextView
            android:id="@+id/weight_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/josefin_sans"
            android:text="Weight (kg)"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/weight_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="70"
            android:textSize="16sp"
            android:background="#EEEEEE"
            android:fontFamily="@font/josefin_sans"
            android:padding="8dp"
            android:layout_marginBottom="16dp" />

        <!-- Height -->
        <TextView
            android:id="@+id/height_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Height (cm)"
            android:textSize="18sp"
            android:textColor="#000000"
            android:fontFamily="@font/josefin_sans"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/height_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="175"
            android:textSize="16sp"
            android:background="#EEEEEE"
            android:padding="8dp"
            android:fontFamily="@font/josefin_sans"
            android:layout_marginBottom="16dp" />

        <!-- Weight Goal -->
        <TextView
            android:id="@+id/weight_goal_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Weight Goal (kg)"
            android:fontFamily="@font/josefin_sans"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/weight_goal_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="65"
            android:textSize="16sp"
            android:background="#EEEEEE"
            android:padding="8dp"
            android:layout_marginBottom="16dp" />

        <!-- Caloric Goal -->
        <TextView
            android:id="@+id/caloric_goal_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/josefin_sans"
            android:text="Caloric Goal (cal)"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/caloric_goal_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/josefin_sans"
            android:text="2000"
            android:textSize="16sp"
            android:background="#EEEEEE"
            android:padding="8dp"
            android:layout_marginBottom="16dp" />
    </LinearLayout>
</ScrollView>